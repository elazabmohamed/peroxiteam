@model IEnumerable<peroxiteam.Models.Act>


@foreach (var item in Model)
{
    <table class="table" style="max-width: 300px; display: inline;">
        <tr>
            <td>
                <div class="card mb-3" style="width: 300px; height:700px">
                    <h4 class="card-header">@Html.DisplayFor(modelItem => item.Name)</h4>
                    <div class="card-body">
                        <h6 class="card-subtitle text-muted">@Html.DisplayFor(modelItem => item.Type)</h6>
                    </div>
                    <div class="">
                        <a href='@Url.Action("ViewAct", "Member", new { id = item.Id })'>
                            <img style="height: 300px; width: 300px; display: block;" src=@item.ImagePath class="spells " alt="Card image">
                        </a>
                    </div>
                    <div class="card-body">
                        <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">@Html.DisplayNameFor(model => model.Category) : @Html.DisplayFor(modelItem => item.Category)</li>
                        <li class="list-group-item">@Html.DisplayNameFor(model => model.Description) : @Html.DisplayFor(modelItem => item.Description)</li>
                    </ul>
                    <div class="card-body">
                        <a class="card-link"> @Html.ActionLink("Devamını oku", "ViewAct", new { id = item.Id })</a>
                    </div>
                </div>
            </td>
        </tr>
    </table>
}

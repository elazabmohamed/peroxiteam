@model IEnumerable<peroxiteam.Models.Company>

@{
    ViewBag.Title = "Rozet Contest";
}

<h2>Rozet Contest - Şirketler</h2>

<table class="table">
    <tr>
        <th>
            Rozet
        </th>
        <th>
            Kurum Adı
        </th>
        <th>
            Kurum Maili
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img style="height: 30px; width: 20px; display: block;" src=@item.Tag>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyMail)
            </td>
        </tr>
    }

</table>
